<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/tab_bottom"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:background="@drawable/tab_new_bg" >
	<ImageView android:id="@+id/tab_icon" android:layout_width="wrap_content"
		android:layout_height="24px" android:layout_centerHorizontal="true"
                android:layout_marginTop="3px"  />
	<TextView android:id="@+id/tab_label" android:layout_width="wrap_content"
		android:layout_height="18px" android:layout_below="@id/tab_icon"
		android:layout_centerHorizontal="true"
                android:layout_marginBottom="3px"
                android:layout_marginTop="0px"
                android:textSize="10px"
                android:ellipsize="marquee" 
                android:singleLine="true" 
		android:textColor="#7c7c7c" />
</RelativeLayout>
