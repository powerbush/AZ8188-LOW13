<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent" 
                android:layout_height="@dimen/call_detail_list_item_info_height" 
                xmlns:android="http://schemas.android.com/apk/res/android">
    
    <TextView android:id="@+id/duration" 
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" 
              android:layout_centerVertical="true" 
              android:layout_alignParentLeft="true"
              android:textColor="#4C4E4E"
              android:textSize="@dimen/call_detail_list_item_info_text_size"
              android:layout_marginLeft="@dimen/call_detail_list_item_info_margin_left"/>

    <TextView android:id="@+id/time" 
              android:layout_width="wrap_content" 
              android:layout_height="wrap_content"
              android:layout_centerVertical="true" 
              android:layout_alignParentRight="true"
              android:textColor="#4C4E4E"
              android:textSize="@dimen/call_detail_list_item_info_text_size"
              android:layout_marginRight="@dimen/call_detail_list_item_info_margin_right"/>

</RelativeLayout>
