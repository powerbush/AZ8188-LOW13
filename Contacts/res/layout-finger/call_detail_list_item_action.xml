<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" 
                android:layout_height="@dimen/call_detail_list_item_action_height">

    <ImageView android:layout_width="match_parent"
               android:layout_height="1px"
               android:layout_alignParentTop="true"
               android:background="@drawable/contact_calllog_dialerseach_line"/>

    <TextView android:id="@+id/text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:maxWidth="200dip"
              android:ellipsize="marquee"
              android:singleLine="true"
              android:layout_alignParentLeft="true"
              android:layout_centerVertical="true"
              android:layout_marginLeft="@dimen/call_detail_list_item_action_margin_left"
              android:textColor="#4C4E4E"
              android:textSize="@dimen/call_detail_list_item_action_text_size0"/>

    <TextView android:id="@+id/simName"
              android:layout_width="wrap_content"
              android:layout_height="17dip"
              android:layout_toRightOf="@id/text"
              android:layout_centerVertical="true"
              android:layout_marginLeft="5dip"
              android:paddingLeft="3dip"
              android:paddingTop="0dip"
              android:paddingRight="3dip"
              android:paddingBottom="0dip"
              android:includeFontPadding="false"
              android:singleLine="true"
              android:textSize="@dimen/call_detail_header_text_size2"
              android:textColor="#FFFFFF"
              android:maxWidth="100dip"
              android:ellipsize="middle"
              />

    <ImageView android:id="@+id/icon"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="@dimen/call_detail_list_item_action_margin_right"/>

    <ImageView android:id="@+id/footer"
               android:layout_width="match_parent"
               android:layout_height="1px"
               android:layout_alignParentBottom="true"
               android:background="@drawable/contact_calllog_dialerseach_line"/>
               
</RelativeLayout>
