<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
	android:id="@+id/widget28" 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:background="@drawable/wgt_listview_item_bg" 
	android:layout_width="match_parent" 
	android:layout_height="wrap_content">
	<LinearLayout android:id="@+id/widget47"
		android:layout_width="wrap_content" 
		android:layout_alignParentRight="true"
		android:layout_height="wrap_content" 
		android:layout_toRightOf="@+id/EventPicArea"
		android:orientation="vertical" 
		android:layout_marginRight="5dp" 
		android:layout_marginLeft="3dp" 
		android:layout_marginBottom="8dp" 
		android:layout_marginTop="8dp">
		<TextView android:layout_height="wrap_content"
			android:id="@+id/EventTitleTV" 
			android:textColor="#ffffff" 
			android:layout_width="match_parent" 
			android:typeface="monospace" android:textSize="16sp">
			</TextView>
			<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/EventPublishTimeTV"  
			android:textColor="#acacab" 
			android:textSize="12sp">
			</TextView> 

	</LinearLayout>
	<FrameLayout 
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true" 
		android:id="@+id/EventPicArea" 
		android:layout_height="70dp" 
		android:layout_width="60dp">
		<RelativeLayout 
			android:layout_height="match_parent"
			android:layout_width="match_parent">
			<ImageView 
				android:layout_width="50dp"

				android:layout_height="50dp" 
				android:id="@+id/EventFriendHeadPortrait"
				android:src="@drawable/wgt_sns_normal_avatar" 
				android:scaleType="fitXY"
				android:layout_marginBottom="6dp" 
				android:layout_marginTop="10dp" 
				android:layout_marginLeft="5dp">
			</ImageView>
			
		</RelativeLayout>

		<RelativeLayout 
			android:id="@+id/widget45"
			android:layout_width="match_parent" 
			android:layout_height="match_parent">
			<ImageView 
				android:layout_alignParentBottom="true"
				android:layout_alignParentRight="true" 
				android:id="@+id/EventWebLog"
				android:src="@drawable/logo_kaixin" 
				android:layout_height="16dp" 
				android:layout_width="16dp" 
				android:scaleType="fitXY" 
				android:layout_marginBottom="10dp" 
				android:layout_marginRight="5dp">
			</ImageView>
		</RelativeLayout>

	</FrameLayout>

</RelativeLayout>
