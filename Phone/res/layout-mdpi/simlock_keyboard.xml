<!-- This is not a standalone element it can be included into apps that need 12-key input -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:orientation="horizontal">

        <Button android:id="@+id/one"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclicka"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />

        <Button android:id="@+id/two"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclicka"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />

        <Button android:id="@+id/three"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclicke"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:orientation="horizontal">

        <Button android:id="@+id/four"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclickb"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />

        <Button android:id="@+id/five"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclickb"        
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />

        <Button android:id="@+id/six"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclickf"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:orientation="horizontal">

        <Button android:id="@+id/seven"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclickc"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />

        <Button android:id="@+id/eight"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclickc"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />

        <Button android:id="@+id/nine"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclickg"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:orientation="horizontal">

        <Button android:id="@+id/ok"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclickj"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
            android:text="@string/simlock_ok"
        />

        <Button android:id="@+id/zero"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclickd"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
        />

        <Button android:id="@+id/dismiss"
            android:layout_width="0sp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background = "@drawable/btnnokeyboradunclickh"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize = "24px"
            android:textColor = "#DADBDB"
            android:text="@string/simlock_dismiss"
        />
        
    </LinearLayout>
    
</LinearLayout>
