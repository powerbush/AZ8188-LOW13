<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    >
    
	<TextView  
	android:layout_marginTop="10dp"
 	android:layout_marginBottom="10dp"
    android:id="@+id/titleId"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" 
    android:textColor="@android:color/black"
    android:text="@string/apninputemgercontactinfor"
    android:textSize="20sp"
    android:layout_centerHorizontal="true"
    />
    
    <LinearLayout 
    android:layout_below="@id/titleId"
    android:layout_marginBottom="10dp"
    android:id="@+id/linear1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
    android:id="@+id/nameTitleId"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="@string/apnname"
    android:textColor="@android:color/black"
    android:textSize="28sp"
    android:layout_below="@id/titleId"
    />
	<EditText
	android:background="#C0C0C0"
    android:id="@+id/nameId"
    android:textColor="@android:color/black"
    android:layout_width="160dp"
    android:layout_height="37dip"
    android:layout_below="@id/nameTitleId"

    />
    </LinearLayout>

    <LinearLayout 
    android:layout_marginBottom="10dp"
    android:id="@+id/linear2"
    android:layout_below="@id/linear1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
	<TextView
	android:textColor="@android:color/black"
    android:id="@+id/telephoneTitleId" 
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="@string/apnphonenum"
    android:textSize="28sp"
    android:layout_below="@id/nameId"
    />
	<EditText
	android:background="#C0C0C0"
    android:id="@+id/telephoneId"
    android:layout_width="160dp"
    android:layout_height="37dip"
    android:layout_below="@id/telephoneTitleId"
    />
    
     </LinearLayout>     
    <LinearLayout 
    android:layout_marginBottom="10dp"
    android:id="@+id/linear3"
    android:layout_below="@id/linear2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
	<TextView
	android:textColor="@android:color/black"
    android:id="@+id/qqTitleId"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="@string/apnQQis"
    android:textSize="28sp"
    android:layout_below="@id/telephoneId"
    />
	<EditText
	android:background="#C0C0C0"
	android:textColor="@android:color/black"
    android:id="@+id/qqId"
    android:layout_width="160dp"
    android:layout_height="37dip"
    android:layout_below="@id/qqTitleId"
    />
    </LinearLayout>
    <LinearLayout 
    android:layout_marginBottom="10dp"
    android:id="@+id/linear4"
    android:layout_below="@id/linear3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    
	<TextView
	android:textColor="@android:color/black"
    android:id="@+id/addressTitleId"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="@string/apnadressis"
    android:textSize="28sp"
    android:layout_below="@id/qqId"
    />
	<EditText
	android:background="#C0C0C0"
	android:textColor="@android:color/black"
    android:id="@+id/addressId"
    android:layout_width="160dp"
    android:layout_height="37dip"
    android:layout_below="@id/addressTitleId"
    />
    
     </LinearLayout>
 	<LinearLayout 
  	android:layout_marginBottom="10dp"
 	android:id="@+id/linear5"
 	android:layout_below="@id/linear4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
	<TextView
	android:textColor="@android:color/black"
    android:id="@+id/birthdayTitleId"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:text="@string/apnbirthdayis"
    android:textSize="28sp"
    android:layout_below="@id/addressId"
    />
	<EditText
	android:background="#C0C0C0"
	android:textColor="@android:color/black"
    android:id="@+id/birthdayId"
    android:layout_width="160dp"
    android:layout_height="37dip"
    android:layout_below="@id/birthdayTitleId"
    />    
 </LinearLayout>
	<Button
    android:id="@+id/finishId"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="80dp"
    android:layout_below="@id/linear5"/>
    
	<Button
    android:id="@+id/resetId"
    android:layout_width="80dp"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/finishId"
    android:layout_below="@id/linear5"
    android:layout_marginRight="20dp"
    android:text="@string/apnredo"/>
</RelativeLayout>
